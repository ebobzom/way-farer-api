{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error",2],
        "no-tabs": 0,
        "linebreak-style": 0
    },
    "overrides": [
        {
            "files":["*-test.js","*.spec.js"],
            "rules": {
                "no-unused-expression": "off",
                "no-undef":"off",
                "linebreak-style":"off",
                "no-unused-expressions": "off"
            }
        }
    ]
}